# ============================================
# Server Setup Configuration File
# Copy this file to .env and modify as needed
# ============================================

# Installation Control
# Set to "false" to skip installation of specific service
INSTALL_POSTGRESQL=true
INSTALL_NGINX=true
INSTALL_DOCKER=true
INSTALL_NGINXUI=true

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_VERSION=18
POSTGRES_PASSWORD=example
POSTGRES_DB=dev
POSTGRES_USER=devuser
POSTGRES_ALLOW_REMOTE=false

# ============================================
# Nginx Configuration
# ============================================
NGINX_WORKER_PROCESSES=auto
NGINX_CREATE_DEFAULT_SITE=true
NGINX_DOMAIN=localhost

# ============================================
# Docker Configuration
# ============================================
# Username to add to docker group (allows running docker without sudo)
# Leave empty or set to "" to skip adding user to docker group
DOCKER_USER=""
DOCKER_CONFIG_DAEMON=true

# ============================================
# NginxUI Configuration
# ============================================
NGINXUI_VERSION=latest
NGINXUI_HOST=127.0.0.1
NGINXUI_PORT=9000
NGINXUI_HOME=/opt/nginxui